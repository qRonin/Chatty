<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Chatty.W.Styles">
    
    <Color x:Key="BackgroundLight">#efefef</Color>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"></SolidColorBrush>

    <Color x:Key="BackgroundMoreLight">#fafafa</Color>
    <SolidColorBrush x:Key="BackgroundMoreLightBrush" Color="{StaticResource BackgroundMoreLight}"></SolidColorBrush>
    
    <Color x:Key="ForeGroundMain">#686868</Color>
    <SolidColorBrush x:Key="ForeGroundMainBrush" Color="{StaticResource ForeGroundMain}"></SolidColorBrush>

    <Color x:Key="ForeGroundMoreDark">#000000</Color>
    <SolidColorBrush x:Key="ForeGroundMoreDarkBrush" Color="{StaticResource ForeGroundMoreDark}"></SolidColorBrush>

    <Color x:Key="ForeGroundLight">#ffffff</Color>
    <SolidColorBrush x:Key="ForeGroundLightBrush" Color="{StaticResource ForeGroundLight}"></SolidColorBrush>

</ResourceDictionary>